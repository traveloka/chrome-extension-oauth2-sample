{
    "name": "ODIN Chrome Extension Sample",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "This extension demonstrates how to use ODIN with Chrome Extensions",
    "browser_action": {
        "default_title": "ODIN",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "background": {
      "scripts": ["./env.js", "lib/extension-lib.js", "src/main.js"],
      "persistent": false
    },
    "permissions": [
        "identity",
        "notifications",
        "https://identity.ath.staging-traveloka.com/*"
    ]
}
